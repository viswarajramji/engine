{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "customerId": { "type": "string" },
    "mobileNo": { "type": "string" },
    "name": { "type": "string" },
    "gender": {
      "type": "string",
      "enum": ["Male", "Female", "Other"]
    },
    "age": { "type": "integer" },
    "nationality": { "type": "string" },
    "passportNo": { "type": "string" },
    "idNo": { "type": "string" },
    "homeAddress": { "type": "string" },
    "leaseStartDate": { "type": "string", "format": "date" },
    "leasePeriod": { "type": "integer" }
  },
  "required": [
    "customerId", "mobileNo", "name", "gender", "age", "nationality",
    "passportNo", "idNo", "homeAddress", "leaseStartDate", "leasePeriod"
  ]
}
